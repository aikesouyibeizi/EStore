<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- com.briup.mappers.StudentMapper是我们定义接口的全限定名字 这样就可以使用接口调用映射的SQL语句了 这个名字一定要和接口对应上-->
<mapper namespace="com.briup.dao.OrderLineMapper">
	
	<resultMap type="Book" id="BookResult">
		<id property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="price" column="price"/>
		<association property="category" resultMap="CategoryResult"></association>
	</resultMap>
	<resultMap type="Order" id="OrderResult">
		<id property="id" column="id"/>
		<result property="total" column="total"/>
		<result property="orderDate" column="orderDate"/>
		<result property="name" column="name"/>
		<result property="address" column="address"/>
		<result property="telephone" column="telephone"/>
		<!-- <association property="customer" resultMap="CustomerResult"></association> -->
	</resultMap>
	<resultMap type="OrderLine" id="OrderLineResult">
		<id property="id" column="id"/>
		<result property="num" column="num"/>
		<association property="book" resultMap="BookResult"></association>
		<association property="order" resultMap="OrderResult"></association>
	</resultMap>
	<!-- <select id="find" resultType="int">
		select order_id_seq.currval from dual
	</select> -->
	<insert id="insertOrderLine" parameterType="OrderLine">
		<selectKey keyProperty="id"   resultType="int" order="BEFORE">
			select line_id_seq.nextval from dual
		</selectKey>
		insert into e_orderLine
		values(#{id},#{num},#{book.id},#{order.id})
	</insert>
	
	
</mapper>